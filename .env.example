# Database
MONGODB_URI=mongodb://localhost:27017/zoggy

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for verification emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@zoggy.com

# Mailchimp (for marketing emails)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your-list-id
MAIL_FROM=noreply@zoggy.com

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_CHANNEL_ID=@your_channel
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# Admin Credentials
ADMIN_EMAIL=admin@zoggy.com
ADMIN_PASSWORD=secure-admin-password

# Anti-fraud
MAX_SIGNUPS_PER_IP_PER_DAY=5
ALLOW_SELF_REF=0

# Public URL (for email verification links and Telegram webhooks)
PUBLIC_BASE_URL=https://your-domain.com

# Server
PORT=8080
NODE_ENV=development